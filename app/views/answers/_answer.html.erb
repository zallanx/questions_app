<li>
  <span class="content">
  	
  	<% if current_user && current_user.a_votes.where(:answer_id => answer.id, :up => true).present? %>
      *
  	<% else %>
      <%= link_to "+", a_votes_path(:a_vote => {:answer_id => answer.id, :up => true}), :method => :post %>
  	<% end %>

  	<% if current_user && current_user.a_votes.where(:answer_id => answer.id, :up => false).present? %>
      *
  	<% else %>
      <%= link_to "-", a_votes_path(:a_vote => {:answer_id => answer.id, :up => false}), :method => :post %>
  	<% end %>



    <%= answer.content %>

  </span>
  <span class="timestamp">
    <p>Answered by <%= link_to answer.user.username, answer.user %> <%= time_ago_in_words(answer.created_at) %> ago.</p> 
  </span>
  <section>
    <% if answer.user.id == current_user.id %>
      <%= link_to "Edit your answer" %>
    <% end %>
  </section> 
  <span>
  	Votes: <%= answer.a_votes.where(:up => true).count - answer.a_votes.where(:up => false).count %>
  </span>

  <% if current_user?(answer.user) %>
    <%= link_to "delete", answer, method: :delete,
                                     data: { confirm: "Are you sure?" },
                                     title: answer.content %>
  <% end %>

    <% if current_user?(answer.question.user) %>
    <% if answer.accepted?  %>
      <%= link_to "unselect answer", 
                  clear_accepted_answer_question_path( answer.question ),
                  method: :put
                  %>
    <% else %>
      <%= link_to "select as answer", 
                  accept_answer_question_path( 
                    answer.question, 
                    answer_id: answer.id 
                  ), 
                  method: :put
                  %>
    <% end %>
  <% end %>


</li>