<li>
  <span class="content">
  	
  	<% if current_user && current_user.votes.where(:answer_id => answer.id, :up => true).present? %>
    *
  	<% else %>
    <%= link_to "+", votes_path(:vote => {:answer_id => answer.id, :up => true}), :method => :post %>
  	<% end %>

  	<% if current_user && current_user.votes.where(:answer_id => answer.id, :up => false).present? %>
    *
  	<% else %>
    <%= link_to "-", votes_path(:vote => {:answer_id => answer.id, :up => false}), :method => :post %>
  	<% end %>



    <%= answer.content %>

  </span>
  <span class="timestamp">
    <p>Answered by <%= link_to answer.user.username, answer.user %> <%= time_ago_in_words(answer.created_at) %> ago.</p> 
  </span>
  <section>
    <% if answer.user.id == current_user.id %>
      <%= link_to "Edit your answer" %>
    <% end %>
  </section> 
  <span>
  	Votes: <%= answer.votes.where(:up => true).count - answer.votes.where(:up => false).count %>
  </span>


</li>