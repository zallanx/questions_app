<%= form_for(@answer) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	
	<div class="field">
		<%= f.text_area :content, placeholder: "Post your answer..." %>

		<%= f.hidden_field :question_id, :value => @question.id %>
	</div>

	<p><%= f.submit "Post", class: "btn btn-large btn-primary" %></p>

<% end %>
