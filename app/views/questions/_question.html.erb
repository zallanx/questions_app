<li>
  <span class="content">
  	
  	<% if current_user && current_user.votes.where(:question_id => question.id, :up => true).present? %>
    *
  	<% else %>
    <%= link_to "+", votes_path(:vote => {:question_id => question.id, :up => true}), :method => :post %>
  	<% end %>

  	<% if current_user && current_user.votes.where(:question_id => question.id, :up => false).present? %>
    *
  	<% else %>
    <%= link_to "-", votes_path(:vote => {:question_id => question.id, :up => false}), :method => :post %>
  	<% end %>



    <%= link_to question.title, question_path(question) %>
  </span>
  <span class="timestamp">
    <p>Question asked by <%= link_to question.user.username, question.user %> <%= time_ago_in_words(question.created_at) %> ago.</p> <!-- should be number of questions, number of views -->
  </span>
  <span>
  	Votes: <%= question.votes.where(:up => true).count - question.votes.where(:up => false).count %>
  </span>
  <span>
    Views: <%= question.impressionist_count %>
  </span>
  <span>
    Answers: <%= question.answers.count %>
  </span>

</li>